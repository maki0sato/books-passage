<%= render "shared/header" %>

<div class="wrapper">
  <div class="side-bar">
    <%= render "side_bar" %>
  </div>
  
  <div class='show-content'>
    <div class='book-box'>
      <h2 class='show-book-title'><%= @book.title %></h2>
