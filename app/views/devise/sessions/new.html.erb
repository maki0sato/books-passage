<div class='form-side' >

<div class='form-page'>

<div class='books-passage'>
  <%= link_to '𝔹𝕆𝕆𝕂𝕊 ℙ𝔸𝕊𝕊𝔸𝔾𝔼', root_path, class: 'books-passage-icon'%>
</div>

<div class='form-header'>
    <h1 class='form-header-text'>
      会員情報入力
    </h1>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"メールアドレスを入力", autofocus: true %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"パスワードを入力" %>
  </div>

  

  <div class="actions">
    <%= f.submit "Log in", class: "sign-up-btn" %>
  </div>
<% end %>

</div>
</div>
