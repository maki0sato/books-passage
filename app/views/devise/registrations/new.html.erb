<div class='form-side' >

<div class='form-page'>

<div class='books-passage'>
  <%= link_to '𝔹𝕆𝕆𝕂𝕊 ℙ𝔸𝕊𝕊𝔸𝔾𝔼', root_path, class: 'books-passage-icon'%>
</div>

<div class='form-header'>
    <h1 class='form-header-text'>
      会員情報入力
    </h1>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">ニックネーム</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :nickname, class:"input-default", id:"nickname", placeholder:"ニックネームを決めましょう", maxlength:"25" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"メールアドレスを入力", autofocus: true %>
  </div>
    
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"パスワードを入力" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力" %>
  </div>
 
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">好きな作家</label>
      <span class="ninni">任意</span>
    </div>
    <%= f.text_field :favalid_author, class:"input-default", id:"favalid_author", placeholder:"好きな作家は？", maxlength:"40" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">好きな小説のジャンル</label>
      <span class="ninni">任意</span>
    </div>
    <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"select-box", id:"genre"}) %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">自己紹介</label>
      <span class="ninni">任意</span>
    </div>
    <%= f.text_area :text, class:"input-default", id:"text", placeholder:"好きな作家の事、思い出の作品、自由に書きましょう" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "sign-up-btn" %>
  </div>
<% end %>

</div>

</div>