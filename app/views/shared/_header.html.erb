<header class='top-page-header'>

  <%#画像クリックでトップページへ遷移できるように%>
  <div class='books-passage-head'>
    <div class='move-icon'>
      <%= link_to '𝔹𝕆𝕆𝕂𝕊 ℙ𝔸𝕊𝕊𝔸𝔾𝔼', root_path, class: 'books-passage-icon-head'%>
    </div>
  </div>

  <div class='header-right'>
    <div class='nav'>
      <%#ログインの有無で表示の変更%>
      <ul class='list'>
      <%#ユーザー詳細ページへ遷移%>
      <% if user_signed_in? %>
        <li class='header-list'><%= link_to current_user.nickname, user_path(current_user.id), class: "user-nickname" %></li>
        <li class='header-list'><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
      <% else %>
        <li class='header-list'><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li class='header-list'><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
      </ul>
    </div>

    <div class='search-bar-contents'>
      <%#検索機能%>
      <div class='search-move'>
        <%= form_with(url: search_books_path, local: true, method: :get, class: "search-form") do |form| %>
          <%= form.text_field :keyword, placeholder: "タイトルと作家名で探す", class: "search-input" %>
          <%= form.submit '検索', class: "search-btn" %>
        <% end %>
      </div>
      <%#ジャンルを選択するとその一覧が表示されるように%>
      <div class='search-genre'>
        <%= search_form_for @q, url: genre_books_path do |f| %>
          <%= f.collection_select :genre_id_eq, Genre.where.not(id: 1), :id, :name, include_blank: "本のジャンルで探す", class: "search-genre" %>
          <%= f.submit '検索', class: "search-genre-btn" %>
        <% end %>
      </div>

    </div>
  </div>
    
  
</header>